{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "garage-scholars-website",
  "buildCommand": "bash generate-firebase-config.sh",
  "outputDirectory": ".",
  "public": true,
  "rewrites": [
    {
      "source": "/home",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
