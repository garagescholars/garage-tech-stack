rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // New client-centric structure
    match /clients/{clientId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Legacy paths — keep working for existing data
    match /jobs/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /quote-photos/{allPaths=**} {
      allow read: if request.auth != null;
    }
    match /schedulingsystem/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /resale/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // ── Garage Scholars Mobile App media paths ──
    match /gs_checkin_videos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /gs_checkout_videos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /gs_freight_receipts/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /gs_job_photos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ── Hiring pipeline: candidate video uploads (public — no auth) ──
    match /hiring-videos/{applicantId}/{videoFile} {
      // Cloud Functions read videos for AI scoring (admin SDK bypasses rules)
      allow read: if request.auth != null;
      // Public write with constraints: max 100MB, video content types only
      allow write: if request.resource.size < 100 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
    }

    // Catch-all: read-only (covers old root-level resale images)
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
